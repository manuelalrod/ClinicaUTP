<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaUtpNav.Pages.LoginView">
    
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="E-Mail Universitario" BackgroundColor="#E0E0E0" Keyboard="Email" />
        <Entry Placeholder="Contraseña" IsPassword="True" BackgroundColor="#E0E0E0" />
        <Button Text="Iniciar Sesión"
                BackgroundColor="#557C9A"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                
                HorizontalOptions="Center"
                WidthRequest="200" />
        <Label Text="¿Olvidaste tu contraseña?" 
               FontSize="Small" 
               HorizontalOptions="Center"
               TextColor="Black"
               VerticalOptions="End"
               Margin="0,45,0,0" />
    </VerticalStackLayout>
</ContentView>
