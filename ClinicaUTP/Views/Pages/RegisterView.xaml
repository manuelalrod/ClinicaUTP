<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaUtpNav.Pages.RegisterView">
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Aquí irán los campos y botones para el registro -->
        <Entry Placeholder="Username" BackgroundColor="#E0E0E0" />
        <Entry Placeholder="E-Mail Universitario" BackgroundColor="#E0E0E0" Keyboard="Email" />
        <Entry Placeholder="Contraseña" IsPassword="True" BackgroundColor="#E0E0E0" />
        <Entry Placeholder="Confirmar Contraseña" IsPassword="True" BackgroundColor="#E0E0E0" />
        <Button Text="Registrarse"
                BackgroundColor="#557C9A"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                HorizontalOptions="Center"
                WidthRequest="200" />
        
    </VerticalStackLayout>
</ContentView>
